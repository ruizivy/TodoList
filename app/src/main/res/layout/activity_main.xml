<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424242"
    tools:context="com.example.ruiz.ruiznatalioprelimexam.MainActivity">

    <LinearLayout
        android:id="@+id/pnlheader"
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:background="#e53935"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50sp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#FFFF"
            android:text="To Do App"/>

        <Button
            android:id="@+id/btn_AddNote"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:background="@mipmap/add"
            android:layout_marginLeft="190sp"
            android:layout_marginRight="30sp"
            android:layout_marginBottom="5px"
            />
    </LinearLayout>

    <ListView
        android:id="@+id/lsttitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#424242"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pnlheader"/>

</RelativeLayout>
