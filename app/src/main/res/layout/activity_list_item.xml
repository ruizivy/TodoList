<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424242"
    tools:context="com.example.ruiz.ruiznatalioprelimexam.ListItem">
    <LinearLayout
        android:id="@+id/pnlitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8px"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/imgpic"
            android:layout_marginTop="10px"
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_marginBottom="10px"
            android:src="@drawable/red"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="80"
            android:layout_margin="10px"
            android:layout_marginLeft="10px"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lbltitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="30"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Title"
                    android:textColor="#244e41"
                    android:textSize="45px" />

                <TextView
                    android:id="@+id/lblfrmdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="70"
                    android:text="From date"
                    android:textColor="#0e7555"
                    android:textSize="20px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="20px"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lbldetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="30"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingLeft="10px"
                    android:singleLine="true"
                    android:text="Details"
                    android:textStyle="italic"
                    android:textColor="#244e41"
                    android:textSize="25px" />

                <TextView
                    android:id="@+id/lbltodate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="70"
                    android:text="To date"
                    android:textColor="#0e7555"
                    android:textSize="20px" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
